{
  "name": "futsalbook-nepal-backend",
  "version": "1.0.0",
  "description": "Backend API for FutsalBook Nepal - A comprehensive futsal booking platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "node src/config/setup.js",
    "db:migrate": "node src/config/migrate.js",
    "db:seed": "node src/config/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "futsal",
    "booking",
    "nepal",
    "sports",
    "api",
    "express",
    "postgresql"
  ],
  "author": "FutsalBook Nepal Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "nodemailer": "^6.9.4",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "@types/jest": "^29.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}